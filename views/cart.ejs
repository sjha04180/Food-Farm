<h2 class="text-2xl font-bold mb-4 bg-[#6BB252] p-2">üõí Shopping Cart</h2>

<div class="cart flex flex-col xl:flex-row gap-5 relative">
  <div id="cart-items" class="mb-4 xl:w-[60vw] px-3 xl:pl-5 xl:h-screen overflow-y-auto relative"></div>
  <div id="total" class="xl:w-[35vw] mb-4 p-2 bg-white hidden h-[55vh] ">
    <p class="text-2xl text-[#878787]  pt-3 pl-5 border border-t-white border-x-white border-b-[#878787] ">Price
      Details</p>
  </div>
</div>




<script>
  const cart1 = JSON.parse(localStorage.getItem("cart")) || [];

  const container = document.getElementById("cart-items");
  const total = document.getElementById("total");


  //For calculating bill amount

  function Total_Price() {
    let amount = 0; // ‚úÖ Initialize properly
    cart1.forEach((item) => {
      amount += parseInt(item.price);
    });
    return amount; // ‚úÖ Return the value
  }

  let total_price = Total_Price();
  let all_amount = calculateDiscountedTotal(total_price);

  function calculateDiscountedTotal(total) {

    // Step 1: Determine discount
    let discount = 0;
    if (total >= 3000) {
      discount = 300;
    } else if (total >= 2000) {
      discount = 200;
    } else if (total >= 1000) {
      discount = 100;
    }

    // Step 2: Subtract discount
    const convFee = 9;
    const discountedTotal = total - discount + convFee;

    // Optional: Show it
    //   console.log("Original Total:", total);
    //   console.log("Discount Applied:", discount);
    //   console.log("Final Total:", discountedTotal);

    return {
      original: total,
      discount: discount,
      final: discountedTotal
    };
  }


  // This is accessing the items from cart and displaying it 
  if (cart1.length === 0) {
    container.innerHTML = `<div class="flex justify-center items-center absolute top-[30%] right-[0%] font-bold text-4xl" ><p>Your cart is empty.</p></div>`;

  } else {
    cart1.forEach((item, index, quantity) => {
      container.innerHTML += `
        <div data-index="${index}" data-quantity="${quantity}" class="product p-4 hover:shadow-xl hover:p-4  bg-white border border-t-white border-x-white border-b-[#dddddd] flex gap-3">
          <img src="${item.photo}" alt="${item.name}" class="w-30 h-30 object-cover rounded p-3 cursor-pointer" />
          <div class="w-full flex flex-col gap-10">
             <div class="about flex flex-col gap-3 w-full">
                <div class=" heading flex flex-col xl:flex-row justify-between xl:items-center w-full cursor-pointer">
                  <h3 class="text-xl font-semibold cursor-pointer">${item.name}</h3>
                  <p>Price: <span class="font-bold text-lg">‚Çπ${item.price}</span></p>
                </div>
             <p class="cursor-pointer">Rating: ‚≠ê ${item.rating}</p>
            </div>
            <div class=" flex justify-between items-center xl:w-[20%] border-3 border-amber-300 rounded px-2 py-1">
              <div class="subtract font-bold text-xl cursor-pointer w-8 flex justify-center items-center">
                 <img src="/img/delete.svg" alt="" class="invert">
              </div>
              <span class="quantity text-xl mx-2">${item.quantity}</span>
              <button class="add px-2 font-bold text-xl cursor-pointer">+</button>
            </div>

          </div>
        </div>
      `;
    });

    document.getElementById("total").classList.toggle('hidden');
    let total =  document.getElementById("total");
   total.innerHTML += `
      <div class="bill_amount flex flex-col gap-5 py-3 px-5">
        <div class="total_price flex justify-between">
          <p>Price (${cart1.length} item)</p> 
          <p class="font-bold">‚Çπ${total_price}</p></div>
        <div class="discount flex justify-between"> 
          <p>Discount</p>
          <p class="text-[#388E3C] font-bold">-‚Çπ${all_amount.discount}</p></div>
        <div class="conFee flex justify-between">
          <p>Convenience Fee</p>
          <p>‚Çπ9</p></div>
        <div class="total_bill flex justify-between border border-dashed border-x-white border-y-[#878787] py-4 px-3 font-bold text-lg ">
          <p>Total Amount</p>
          <p>‚Çπ${all_amount.final}</p></div>
        <div class="msg font-bold text-[#388E3C]"><p>You will save ‚Çπ${all_amount.discount} on this order</p></div>
     </div>
<button 
  id="pay-button" 
  data-amount="${all_amount.final}" 
  class="order bg-[#388E3C] text-center text-amber-50 p-4 text-lg font-bold cursor-pointer w-full hover:bg-green-900">
  Place Order
</button>
      `
  }


</script>